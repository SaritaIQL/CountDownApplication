<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:paddingBottom="8dp"
        android:background="@color/lightBlue_2">

        <androidx.cardview.widget.CardView
            android:id="@+id/crdCurrentBalanceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtRowTitlePostId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product id : "
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"/>

                    <TextView
                        android:id="@+id/txtRowPostId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Product id"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"
                        android:gravity="start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtRowNameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name  : "
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"/>

                    <TextView
                        android:id="@+id/txtRowName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name id"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"
                        android:gravity="start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtRowEmailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email  : "
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"/>

                    <TextView
                        android:id="@+id/txtRowEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email id"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"
                        android:gravity="start"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtRowBodyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body  : "
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:gravity="start"
                        android:layout_marginStart="8dp"
                        android:fontFamily="sans-serif-black"/>

                    <TextView
                        android:id="@+id/txtRowBody"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Body id"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"
                        android:gravity="start"/>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
